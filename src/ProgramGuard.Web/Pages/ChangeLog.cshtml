@page
@using ProgramGuard.Dtos.LogQuery
@model ProgramGuard.Web.Pages.ChangeLogModel
@{
    ViewData["Title"] = "Change Log";
}

<!--- Razor 預設開啟 AntiForgeryToken 這個會影響 Post, Put, Patch, Delete 等行為 !--->
@Html.AntiForgeryToken()
<div id="gridContainer">
    @(
        Html.DevExtreme().DataGrid<GetChangeLogDto>()
                .DataSource(o => o.RemoteController()
                .LoadUrl("ChangeLog?Handler=Data")
                .UpdateUrl("ChangeLog")
                .Key("Id"))
                .Editing(e =>
                {
                    e.AllowUpdating(true);
                    e.Mode(GridEditMode.Batch);
                    e.UseIcons(true);
                })
        .Selection(s => s
        .Mode(SelectionMode.Multiple)
        .Deferred(true))
        .FilterRow(f => f.Visible(true))
        .HeaderFilter(headerFilter => headerFilter.Visible(true))
        .Columns(columns =>
        {
            columns.AddFor(m => m.Id).AllowEditing(false);

            columns.AddFor(m => m.FileName).AllowEditing(false);

            columns.AddFor(m => m.ChangeTime).Format("yyyy-MM-dd HH:mm:ss").AllowEditing(false);

            columns.AddFor(m => m.ConfirmBy).AllowEditing(false);

            columns.AddFor(m => m.ConfirmTime).Format("yyyy-MM-dd HH:mm:ss").AllowEditing(false);

            columns.AddFor(m => m.ConfirmStatus);
        })
        .ShowBorders(true)
        .ColumnAutoWidth(true)
        .Selection(o => o.Mode(SelectionMode.Single))
        .NoDataText("沒有資料")
        .HoverStateEnabled(true)
        .FocusedRowEnabled(true)
        .Paging(paging => paging.PageSize(15))
        .Pager(pager =>
        {
            pager.Visible(true);
            pager.DisplayMode(GridPagerDisplayMode.Full);
            pager.ShowPageSizeSelector(true);
            pager.AllowedPageSizes(new JS("[15, 30, 50, 100, 200]"));
            pager.ShowInfo(true);
            pager.ShowNavigationButtons(true);
        })
        )
</div>

<script>
    /* 配合 AntiForgeryToken 使用 */
    $.ajaxSetup({
        data: {
            __RequestVerificationToken: document.getElementsByName("__RequestVerificationToken")[0].value
        }
    });
</script>

